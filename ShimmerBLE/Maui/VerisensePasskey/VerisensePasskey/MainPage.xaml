<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VerisensePasskey.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="DeviceStateLabel"
           Text="Status: Idle"
           FontAttributes="Bold"
           TextColor="White"
           FontSize="16" />
            <Picker x:Name="passkeySettings"
        Title="Select Passkey Mode"
        WidthRequest="230"
        SelectedIndexChanged="PasskeySettings_SelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>no passkey</x:String>
                        <x:String>default passkey</x:String>
                        <x:String>clinical trial passkey</x:String>
                        <x:String>custom</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ScanBtn"
                Text="Scan" 
                Clicked="OnScanClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ConnectBtn"
                Text="Connect" 
                Clicked="OnConnectClicked"
                HorizontalOptions="Fill" />
            <Button
    x:Name="WritePasskeyButton"
    Text="Write Passkey"
    Clicked="WritePasskeyConfigurationButton"
    HorizontalOptions="Center"
    WidthRequest="200"
    Margin="10" />
            <Button
    x:Name="DisconnectBtn"
    Text="Disconnect" 
       Clicked="OnDisconnectClicked"
    HorizontalOptions="Fill" />
            <ListView x:Name="DevicesList"
          ItemSelected="DevicesList_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Id}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label x:Name="UuidLabel" Text="Selected UUID will appear here" FontAttributes="Bold" Padding="10"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
