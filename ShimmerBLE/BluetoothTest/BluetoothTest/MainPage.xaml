<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothTest.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bluetooth Test!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="uuidEntry" FontSize="Micro"/>
        <Entry x:Name="statusEntry" FontSize="Micro"/>
        <Button x:Name="connectButton" Text="Connect" Clicked="connectButton_Clicked"/>
    </StackLayout>

</ContentPage>
